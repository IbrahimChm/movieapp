<h1>Nueva Serie</h1>

<%= form_with(model: @serie, url: series_path) do |form| %>
  <div>
    <%= form.label :name, 'Nombre' %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :synopsis, 'Sinopsis' %>
    <%= form.text_area :synopsis %>
  </div>

  <div>
    <%= form.label :director, 'Director' %>
    <%= form.text_field :director %>
  </div>

  <%= form.submit 'Guardar' %>
<% end %>

<%= link_to 'Volver al listado', series_path %>
